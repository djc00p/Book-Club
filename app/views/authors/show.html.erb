<% @books.each do |book| %>
  <section id="author_show_book<%= book.id %>">
    <%= book.title %><br/>
    <% counter = 1 %>
    <% if book.authors.count > 1 %>
      <p>Additional Author(s): <%= book.authors[counter].name %></p>
      <% counter += 1 %>
    <%  end %>
    <%= book.pages %><br/>
    <%= book.year_pub %><br/>
    <img src="<%= book.image %>">
  </section>
<% end %>
