<%= form_for @book do |f| %>
<p><%= f.label :title %>
  <%= f.text_field :title %>

  Author(s) <input type="text" name="book[author]"
  id="book_authors" required="true">

  <%= f.label :pages %>
  <%= f.number_field :pages %>


  <label for="book_year_pub">Year Published</label>
  <%= f.number_field :year_pub %>


  <%= f.label :image %>
  <%= f.text_field :image, value: nil %>

  <%= f.submit %>
</p>

<% end %>
